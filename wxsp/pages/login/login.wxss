}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
  /* background:#cee6d2; */
  padding: 0rpx;
  justify-content: flex-start;
}

.loginImg {
  align-self: center;
  width: 750rpx;
  height: 400rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  width: 750rpx;
  height: 100%;
  /* background-color: rgb(197, 146, 146); */
  /* background-image: url */
  /* background-position:center; */
}

.title {
  align-self: center;
  margin-top: 100rpx;
  color: rgb(43, 43, 43);
  font-size: 50rpx;
  font-weight: 600;
  font-family: fantasy;
}

.subTitle {
  align-self: center;
  margin-top: 30rpx;
  color: rgb(160, 160, 160);
  font-size: 35rpx;
}

.textDescribe {
  align-self: flex-start;
  width: 100%;
  height: 250rpx;
  margin-top: 150rpx;
  margin-left: 80rpx;
  /* background: gray; */
  color: rgb(160, 160, 160);
  font-size: 30rpx;
  font-family: fantasy;
}

.loginBotton {
  align-self: center;
  width: 700rpx;
  height: 100rpx;
  background-color: rgb(255, 255, 255);
  color: rgb(214, 184, 15);
  border-radius: 50rpx;
  font-size: 40rpx;
  border: 1rpx solid rgb(255, 255, 255);
  margin-top: 100rpx;
  margin-bottom: 40rpx;
  font-weight: 500;
  font-family: fantasy;
}

.loginBotton::after {
  border-radius: 50rpx;
  border: 0;
}

.loginBotton text {
  vertical-align: middle;
  display: table-cell;
}

