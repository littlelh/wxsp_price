/**index.wxss**/

page {
  height: 100%;
}

.tab {
  float: left;
  width: 25%;
  text-align: center;
  padding: 10rpx 0;
  font-size: 35rpx;
  color: rgba(57, 161, 127, 0.897);
}

.topTabSwiper {
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  zoom: 1;
}

.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}

.tabBorer {
  border-bottom: 1px solid #ff3c00;
  color: #ff3c00;
}

.view_swiper {
  width: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
  /* background:#cee6d2; */
  padding: 0rpx;
  justify-content: flex-start;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  width: 750rpx;
  height: 150rpx;
  background-color: rgb(60, 150, 170);
}

.canvas {
  align-self: center;
  width: 100%;
  height: 900rpx;
  margin-top: 300rpx;
}
